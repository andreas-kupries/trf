
/*
 *      features.h
 *
 *    Quick hack in order to be able to compile
 *    the md5-crypt library on other platforms.
 *
 *                              Jan Nijtmans
 */

#ifndef _FEATURES_H

#define _FEATURES_H

#ifndef __BEGIN_DECLS
#define __BEGIN_DECLS /**/
#define __END_DECLS /**/
#define __restrict /**/
#endif

#define __USE_GNU

#ifndef __P
#if defined (__STDC__) && __STDC__
# define __P(x) x
#else
# define __P(x) ()
#endif
#endif

#ifndef EOPNOTSUPP
#define EOPNOTSUPP 122
#endif

#ifndef __set_errno
# define __set_errno(val) errno = (val)
#endif

#endif /* _FEATURES_H */
