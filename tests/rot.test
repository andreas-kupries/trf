if {[string compare test [info procs test]] == 1} then {source defs}

# key always '13' (== rot13)
foreach {index in out} {
    1 {Andreas}      "Lyo\}pl~"
    2 {Jan Nijtmans} "Uly+Ytu\177xly~"
} {
    test rot-1.$index {rot13, encrypt} {
	rot -dir encrypt -key [hex -mode decode 0B] $in
    } $out; # {}

    test rot-2.$index {rot13, decrypt} {
	rot -dir decrypt -key [hex -mode decode 0B] $out
    } $in; # {}
}
