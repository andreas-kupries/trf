# -*- tcl -*-
extension trf {
    author       {Andreas Kupries (a.kupries@westend.com)}
    maintenance  {Andreas Kupries (a.kupries@westend.com)}

    version	   1.0b3
    copying-policy {BSD-Style, see 'tcl'-license}
    date           {@mDate@}

    description {
	Collection of transformation procedures
	* Encryption      (des, idea, blowfish, rc4, rc2)
	* Message digests (crc (pgp), md2, md5, sha, sha-1, haval, crc32, adler32 (both zlib), ripemd-160)
	* Data conversion (dual, hexadecimal, octal, uu, base64, ascii85)
	* Error correcting coding (reed-solomon coder)
	* Compression (zlib based).
	* (un)pack binary data (as in perl)
    }

    primary-urls {
	Sources:                  ftp://ftp.westend.com/pub/aku/trf@mFullVersion@.tar.gz (~800 K)
	Same, different archiver: ftp://ftp.westend.com/pub/aku/trf@mDosVersion@.zip     (~800 K)
	Short documentation:      ftp://ftp.westend.com/pub/aku/trf@mFullVersion@.README (~2 K)
    }

    secondary-urls {
	ftp://ftp.kisters.de/pub/lang/tcl/ext/trf@mFullVersion@.tar.gz
	ftp://ftp.kisters.de/pub/lang/tcl/ext/trf@mDosVersion@.zip
	ftp://ftp.kisters.de/pub/lang/tcl/ext/trf@mFullVersion@.readme
    }

    development-platform {Linux 2.0.29, gcc 2.7.2.1}
    platforms {
	Linux 2.0.29	(gcc 2.7.2.1)	Development system
	IRIX 6.2	(cc only)
	ULTRIX 4.1	(both cc and gcc)
	ULTRIX 4.4	(cc 3.0)
	HP-UX-9		(both cc and gcc)
	HP-UX-10.2
	Solaris 2.5	(gcc only)

	Other machines and OS's should work too. 
    }

    dependencies {
	tcl (7.6 or higher (8.0a2, NOT a1))
	plus-patches as of Dec 5, 1996 or later (optional)
	memchan 1.0  or higher (optional)
	zlib-1.0.4   or higher (optional)
	libdes-3.21  or higher (optional)
	SSLeay-0.6.6 or higher (optional)
    }

    comments {
	BEWARE: The USA places export restrictions
	upon cryptographic software.

	Because of this the package was not loaded to the
	primary tcl-archive at neosoft.com.
    }
}
